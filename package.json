{
  "name": "usefulljs",
  "version": "1.1.0",
  "description": "A utility module which provides straight-forward, powerful functions for working with asynchronous JavaScript",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/cjs/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./array": {
      "import": "./dist/esm/array.js",
      "require": "./dist/cjs/array.js"
    },
    "./crypto": {
      "import": "./dist/esm/crypto.js",
      "require": "./dist/cjs/crypto.js"
    },
    "./retry": {
      "import": "./dist/esm/retry.js",
      "require": "./dist/cjs/retry.js"
    },
    "./singleExecution": {
      "import": "./dist/esm/singleExecution.js",
      "require": "./dist/cjs/singleExecution.js"
    }
  },
  "scripts": {
    "prepublishOnly": "npm run build",
    "script:dist": "node scripts/clear-dist-dir.js",
    "script:exports": "node scripts/generate-exports.js",
    "build:esm": "tsc --module esnext --outDir dist/esm",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs",
    "build": "npm run script:dist && npm run script:exports && npm run build:esm && npm run build:cjs",
    "dev": "bun --watch src/index.ts",
    "test": "bun test",
    "pub": "bun run build && npm publish --access=public"
  },
  "keywords": [
    "async",
    "asynchronous",
    "utility",
    "useful",
    "javascript",
    "typescript",
    "array",
    "encrypt",
    "decrypt"
  ],
  "homepage": "https://github.com/ugo-studio/usefulljs/",
  "repository": {
    "type": "git",
    "url": "https://github.com/ugo-studio/usefulljs.git"
  },
  "bugs": {
    "url": "https://github.com/ugo-studio/usefulljs/issues"
  },
  "author": "Ugochukwu David",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.3.0",
    "bun-types": "^1.2.20",
    "typescript": "^5.9.2"
  },
  "files": [
    "dist"
  ]
}